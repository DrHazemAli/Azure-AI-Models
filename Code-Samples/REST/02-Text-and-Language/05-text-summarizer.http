### 8.1 PowerShell - Extractive Summarization
# Run this in PowerShell
<#
$endpoint = "YOUR_ENDPOINT_HERE"
$apiKey = "YOUR_API_KEY_HERE"
$apiVersion = "2023-04-01"

$headers = @{
    "Ocp-Apim-Subscription-Key" = $apiKey
    "Content-Type" = "application/json"
}

$body = @{
    displayName = "PowerShellExtractiveTest"
    analysisInput = @{
        documents = @(
            @{
                id = "1"
                language = "en"
                text = "The future of transportation is electric. Electric vehicles are becoming more affordable and accessible, with improved battery technology extending driving ranges. Governments worldwide are implementing policies to encourage EV adoption, including tax incentives and charging infrastructure development. Major automakers are committing to electric-only lineups within the next decade."
            }
        )
    }
    tasks = @(
        @{
            kind = "ExtractiveSummarization"
            taskName = "PowerShellTask"
            parameters = @{
                sentenceCount = 2
                sortBy = "Rank"
            }
        }
    )
} | ConvertTo-Json -Depth 5

$response = Invoke-RestMethod -Uri "$endpoint/language/analyze-text/jobs?api-version=$apiVersion" -Method POST -Headers $headers -Body $body

Write-Output "Job ID: $($response.jobId)"
Write-Output "Status: $($response.status)"

# Poll for results
do {
    Start-Sleep -Seconds 5
    $status = Invoke-RestMethod -Uri "$endpoint/language/analyze-text/jobs/$($response.jobId)?api-version=$apiVersion" -Method GET -Headers $headers
    Write-Output "Current status: $($status.status)"
} while ($status.status -eq "running")

# Display results
if ($status.status -eq "succeeded") {
    $results = $status.tasks.items[0].results.documents[0].sentences
    Write-Output "Summary sentences:"
    foreach ($sentence in $results) {
        Write-Output "- $($sentence.text) (Score: $($sentence.rankScore))"
    }
}
